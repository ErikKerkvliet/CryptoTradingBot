# ====================================================================
# TRADING BOT ENVIRONMENT CONFIGURATION TEMPLATE
# ====================================================================
#
# This is a TEMPLATE file (.env.example).
# To use it:
# 1. Copy this file to ".env" (without .example)
# 2. Replace all placeholder values with your actual credentials
# 3. The bot will ONLY read from .env, not from .env.example
#
# ====================================================================

# Exchange: "kraken" or "mexc"
EXCHANGE=mexc

# "SPOT" or "FUTURES"
TRADING_MODE="SPOT"

# Futures-specific settings
DEFAULT_LEVERAGE=20

# Kraken API (only needed if EXCHANGE=kraken)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# MEXC API (only needed if EXCHANGE=mexc)
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Telegram API (get from https://my.telegram.org)
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here_if_using_bot

# Telegram Channels (use @ for public channels, numeric ID for private)
TELEGRAM_CHANNEL_ID=@your_live_channel_here

TELEGRAM_DRY_RUN_CHANNEL_ID=@your_test_channel_here

# Trading Configuration
DRY_RUN=true
MAX_POSITION_SIZE_PERCENT=5

ORDER_SIZE_USD=0.0
MIN_CONFIDENCE_THRESHOLD=80
MAX_DAILY_TRADES=10

AUTO_SELL_MONITOR=false

# ====================================================================
# Channel-Specific Wallet Configurations
# ====================================================================
# Format: "channel1:CURRENCY:AMOUNT,channel2:CURRENCY:AMOUNT,..."
# Each channel gets its own isolated wallet with the specified starting balance
#
# Examples:
# - Single channel: "testchannel:USDT:1000"
# - Multiple channels: "testchannel:USDT:1500,premiumsignals:SOL:2000,freesignals:UNI:500"
# - Multiple currencies: "btcchannel:BTC:0.1&LTC:20&SOL:3"
#
# IMPORTANT: Use the channel name without @ symbol
CHANNEL_WALLET_CONFIGS=testchannel:USDT:1000,mycryptobottestchannel:USDT:1500,universalcryptosignalss:USDT:2000

# Logging
LOG_LEVEL=INFO