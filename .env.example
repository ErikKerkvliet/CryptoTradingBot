# Exchange: "kraken" or "mexc"
EXCHANGE=mexc

# "SPOT" or "FUTURES"
TRADING_MODE="SPOT"

# Futures-specific settings
DEFAULT_LEVERAGE=20

# Kraken API (only needed if EXCHANGE=kraken)
KRAKEN_API_KEY=kraken_api_key
KRAKEN_API_SECRET=kraken_api_secret

# MEXC API (only needed if EXCHANGE=mexc)
MEXC_API_KEY=mexc_api_key
MEXC_API_SECRET=mexc_api_secret

# OpenAI API
OPENAI_API_KEY=openai_api_key

# Telegram API (use Telethon credentials or Bot Token depending on approach)
TELEGRAM_API_ID=telegram_api_id
TELEGRAM_API_HASH=telegram_api_hash
TELEGRAM_BOT_TOKEN=telegram_bot_token

TELEGRAM_CHANNEL_ID=@telegram_channel

TELEGRAM_DRY_RUN_CHANNEL_ID=@telegram_dry_run_channel

# Trading Configuration
DRY_RUN=true
MAX_POSITION_SIZE_PERCENT=5

ORDER_SIZE_USD=0.0
MIN_CONFIDENCE_THRESHOLD=80
MAX_DAILY_TRADES=10

# Misc
LOG_LEVEL=INFO